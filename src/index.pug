include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        .welcome-section
          section.parallax
            .parallax-bg
              .parallax__layer(data-speed="0")
                img.parallax__images.parallax__images--clouds(src=require("images/parallax/1.png") role="presentation")
              .parallax__layer(data-speed="0.13")
                img.parallax__images.parallax__images--mountains(src=require("images/parallax/2.png") role="presentation")
              .parallax__layer(data-speed="0.16")
                img.parallax__images.parallax__images--balloon(src=require("images/parallax/3.png") role="presentation")
              .parallax__layer(data-speed="0.2")
                img.parallax__images.parallax__images--overcast(src=require("images/parallax/4.png") role="presentation")
              .parallax__layer(data-speed="0.23")
                img.parallax__images.parallax__images--stones(src=require("images/parallax/5.png") role="presentation")
              .parallax__layer(data-speed="0")
                img.parallax__images.parallax__images--slope(src=require("images/parallax/6.png") role="presentation")
              .parallax__layer(data-speed="0")
                img.parallax__images.parallax__images--snow(src=require("images/parallax/7.png") role="presentation")

          section.hero#head1
            .container.hero__container
              header.header
                .logo ХБ
                .header__menu
                  nav.nav 
                    ul.nav__list
                      - var menu = [{name: 'Главная', id:'#head1'}, {name: 'Обо мне', id:'#head2'}, {name: 'Навыки', id:'#head3'}, {name: 'Работы', id:'#head4'}, {name: 'Отзывы', id:'#head5'}, {name: 'Связаться', id:'#head6'}];
                      each item in menu
                        li.nav__item
                          a(href=item.id).nav__link #{item.name}
                .header__links
                  ul.socials 
                    - var socials = ['insta', 'vk', 'github'];
                    each item in socials  
                      li.socials__item
                        a(href="").socials__link
                          +icon(`${item}`, 'socials__icon')
                a(href="#").header__links-menu
                  .header__links-menu_bars
              .hero__content
                .user-info.user-info__content
                  .user-info__desc Личный сайт веб разработчика
                  .user-info__name Булат Хисаев
              button.hero__bottom-buttons
                a(href="#head2").scroll-down-button Скролл
                  +icon(`scroll`, 'scroll-down-button__icon')
          section.about#head2
            .container.about__container
              .about__left
                .user
                  .user__avatar
                    +image(`content/user.jpg`, 'user__avatar-pic')
                  .user__data
                    table.user__data-table
                      -
                        var data = [
                          ['Проживаю:', 'Уфа'],
                          ['Возраст:', '30 лет'],
                          ['Родился:', '6 ноября 1988']
                        ]
                      each row in data  
                        tr.user__data-row 
                          td.user__data-cell #{row[0]}
                          td.user__data-cell #{row[1]}
              .about__right    
                .about__welcome Привет, меня зовут
                .about__username Булат Хисаев
                .about__desc 
                  p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__ps 
                  p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
 
        section.values#head3
          .container.values__container
            .values__title
              h2.section-title.values__title-text.section-title--xmall Чем я могу быть полезен вам
              article.values__desc Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
            .values__bg-skills
              .values__widget
                #skills-component
              .values__bg
                +image(`content/Backpack.png`, 'values__bg-img')
               
        section.work#head4
          .container
            .work__title  
              h2.section-title Мои работы
            .work__content
              #slider-component 
        .bottom-section
         
          section.reviews#reviews-component
            reviews-component
          section.contact#head6
            .container
              .contact__title
                .section-title Связаться со мной
              form.form(action="")
                .form-row
                  label.form-block(for="")
                    .form-block__title Введите ваше имя
                    .form-block__container
                      +icon(`user`, 'form-block__title-icon')
                      .form-block__field
                        input.form-block__input(type="text" name="name" placeholder="" required)
                  label.form-block(for="")
                    .form-block__title Введите ваш email
                    .form-block__container
                      +icon(`envelope`, 'form-block__title-icon')
                      .form-block__field
                        input.form-block__input(type="email" name="name" placeholder="" required)
                .form-row
                  label.form-block(for="")
                    .form-block__title Сообщение к письму
                    .form-block__container
                      +icon(`message`, 'form-block__title-icon')
                      .form-block__field
                        textarea(name="comment").form-block__input.form-block__input-textarea
                .form-row.form-row__btn
                  input(type="submit" value="Отправить").form-row__button
        footer.footer
          .container.footer__container
            .footer__copyright
              .copyright
                .copyright__year © 2019
                .copyright__username Булат Хисаев
                .copyright__desc Личный сайт веб-разработчика
            .footer__data  
              .footer__menu
                nav.nav.nav--color-white 
                  ul.nav__list
                    each item in menu
                      li.nav__item
                         a(href=item.id).nav__link #{item.name}
              .footer__data-columns
                .footer__data-col
                  article.footer__text Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                  .footer__socials
                    ul.socials.socials--rounded 
                      each item in socials  
                        li.socials__item
                          a(href="").socials__link
                            +icon(`${item}`, 'socials__icon')
                .footer__data-col
                  article.footer__text
                    p.footer__text-statements Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                    p.footer__text-author Martin Golding

    include ./templates/entry.pug