.nav__list {
  display: flex;
  align-items: center;
}

.nav__item {
  margin-right: 60px;
  &:last-child {
    margin-right: 0;
  }
}

.nav__link {
  font-family: "Open Sans";
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  text-decoration: none;
  &.active {
    border-bottom: 2px solid #5500f2;
  }
  &:hover {
    color: #1f232d;
  }
}
