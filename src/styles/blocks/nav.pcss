.nav__list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.nav__item {
  margin-right: 60px;
  &:last-child {
    margin-right: 0;
  }
}

.nav__link {
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  text-decoration: none;
  &.active {
    border-bottom: 2px solid #5500f2;
  }
  &:hover {
    font-weight: 600;
  }
}
