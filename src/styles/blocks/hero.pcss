.hero {
  height: 100vh;
  min-height: 650px;
  padding: 70px 0;
  &__container {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
}

.hero__content {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.hero__bottom-buttons {
  display: flex;
  justify-content: center;
}
