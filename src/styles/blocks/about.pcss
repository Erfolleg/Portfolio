.about__container {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
}

.about__left {
  width: 30%;
}

.about__right {
  width: 50%;
}

.about {
  height: 100vh;
  font-size: 16px;
  font-weight: 600;
  line-height: 30px;
  &__welcome,
  &__desc {
    opacity: 0.5;
  }
  &__username {
    font-size: 36px;
    font-weight: 700;
    line-height: 48px;
    padding: 35px 0;
  }
  &__ps {
    opacity: 0.5;
    font-style: italic;
    padding-top: 85px;
  }
}
