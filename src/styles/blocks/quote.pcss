.quote {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.quote__text {
  position: relative;
  margin-bottom: 30px;
  flex: 1;
  opacity: 0.5;
  font-size: 16px;
  font-weight: 600;
  line-height: 30px;
}

.quote__text-icon {
  position: absolute;
  width: 59px;
  fill: #414c63;
  opacity: 0.05;
  left: -70px;
  top: 0;
}

.quote__author {
  align-items: flex-end;
}
