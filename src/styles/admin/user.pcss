.user {
  display: flex;
  align-items: center;
  margin-right: 28px;
  font-size: 18px;
  font-weight: 400;
  line-height: 34px;
}

.user__pic {
  width: 50px;
  height: 50px;
  margin-right: 20px;
  overflow: hidden;
  &-avatar {
    border-radius: 50%;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
}

.user__name {
  font-size: 18px;
  font-weight: 700;
}

.user__occ {
  opacity: 0.5;
  font-size: 16px;
  font-weight: 600;
}
